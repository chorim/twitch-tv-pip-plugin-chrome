{
    "name": "TwitchTV PIP Mode",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "Picture in Picture for Twitch TV",
    "icons": { "16": "icons/16x16.png", "48": "icons/48x48.png", "128": "icons/128x128.png" },
    "homepage_url": "https://yuki.kr",
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_icon": {
            "19": "icons/19x19.png",
            "38": "icons/38x38.png"
        },
        "default_title": "PIP!"
    },
    "permissions": [
        "http://www.twitch.tv/*",
        "https://www.twitch.tv/*",
        "tabs"
    ]
}